<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #1A202C; -fx-background-radius: 20;"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaproject.controllers.GesturePointageController">
    <padding><Insets bottom="30" left="30" right="30" top="30"/></padding>

    <Label text="DÉTECTION DE GESTE bouger avec la main à droite pour pointer l'entrée sinon à gauche" textFill="WHITE" style="-fx-font-weight: 900; -fx-font-size: 18;"/>

    <StackPane style="-fx-border-color: #4A90E2; -fx-border-width: 3; -fx-border-radius: 10;">
        <ImageView fx:id="videoFrame" fitWidth="500" fitHeight="375" preserveRatio="true"/>
    </StackPane>

    <Label fx:id="statusLabel" text="Main Ouverte (Entrée) / Poing Fermé (Sortie)"
           textFill="#A0AEC0" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

    <Button text="ANNULER" onAction="#closeAction" prefWidth="150"
            style="-fx-background-color: #E53E3E; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
</VBox>